{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "extends": ["next/core-web-vitals", "eslint:recommended", "prettier"],
  "env": {
    "es2021": true,
    "node": true,
    "jest/globals": true
  },
  "rules": {
    "no-console": "warn",
    "max-len": ["error", { "code": 100 }],
    "semi": ["error", "never"]
  },
  "plugins": ["jest"]
}
